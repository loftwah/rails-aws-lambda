#!/bin/sh
set -e

if [ "$CI" != "true" ]; then
  echo "== Cleaning possible prod dependencies from local deploy. =="
  rm -rf ./.bundle \
         ./vendor/bundle \
         ./node_modules
fi

echo '== Installing dependencies =='
bundle lock --add-platform x86_64-linux
bundle lock --add-platform ruby
bundle config set --local path 'vendor/bundle'
bundle install
# ./bin/yarn
